.page {
  min-height: 100vh;
  display: flex;
  padding-top: 7%;
  flex-direction: column;
  background-color: #F6F7F9;
}

/* ===== 顶部区域 ===== */
.hero {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0 100rpx;
  padding-bottom: 70rpx;
}

/* ================= 图标部分 ================= */
.logo-container {
  display: flex;
  justify-content: center;
  margin-top: 120rpx;
  margin-bottom: 80rpx;
}

/* 橙色圆形底板与阴影 */
.logo-bg {
  width: 220rpx;
  height: 220rpx;
  background-color: var(--theme-main);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 16rpx; /* 两个白色图形之间的间距 */
  box-shadow: var(--icon-shadow); /* 应用提取的图标阴影 */
}

/* 白色几何小人 */
.figure {
  width: 68rpx;
  height: 68rpx;
  background-color: #ffffff;
  position: relative;
  /* 核心魔法：用 clip-path 裁出顶部的 V 型凹槽，形成两个“耳朵” */
  clip-path: polygon(0% 0%, 50% 25%, 100% 0%, 100% 100%, 0% 100%);
  border-bottom-left-radius: 6rpx;
  border-bottom-right-radius: 6rpx;
}

/* 利用伪元素画出灰色的眼睛 */
.figure::before,
.figure::after {
  content: '';
  position: absolute;
  top: 36rpx;
  width: 8rpx;
  height: 8rpx;
  background-color: #E0E0E0; /* 浅灰色眼睛 */
  border-radius: 50%;
}

.figure::before {
  left: 16rpx;
}

.figure::after {
  right: 16rpx;
}

.app-name {
  font-size: 48rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 16rpx;
}

.app-slogan {
  font-size: 28rpx;
  color: #999;
}

/* ===== 底部区域 ===== */
.bottom-section {
  flex: 1;
  padding: 80rpx 60rpx 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 登录按钮 */
.login-btn {
  width: 100% !important;
  height: 96rpx;
  line-height: 96rpx;
  background-color: var(--theme-main);
  box-shadow: var(--btn-shadow);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 12rpx;
  border: none;
  margin-bottom: 40rpx;
}

.login-btn::after {
  border: none;
}

.login-btn:active {
  opacity: 0.85;
}

/* 隐私协议 */
.agreement-row {
  display: flex;
  align-items: center;
}

.agreement-text {
  font-size: 24rpx;
  color: #999;
  margin-left: 8rpx;
}

.agreement-link {
  font-size: 24rpx;
  color: #3a85f7;
}

/* ===== 隐私政策弹窗 ===== */
.privacy-popup {
  display: flex;
  flex-direction: column;
  height: 100%;
  padding: 0 40rpx;
}

.privacy-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
  padding: 40rpx 0 24rpx;
}

.privacy-content {
  flex: 1;
  height: 0;
}

.privacy-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
}
