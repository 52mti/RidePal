.page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #F6F7F9;
}

/* ===== 顶部区域 ===== */
.hero {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0 100rpx;
}

.logo-circle {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background-color: #07c160;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
}

.logo-img {
  width: 140rpx;
  height: 140rpx;
}

.app-name {
  font-size: 48rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 16rpx;
}

.app-slogan {
  font-size: 28rpx;
  color: #999;
}

/* ===== 底部区域 ===== */
.bottom-section {
  flex: 1;
  padding: 80rpx 60rpx 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 登录按钮 */
.login-btn {
  width: 100% !important;
  height: 96rpx;
  line-height: 96rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 48rpx;
  border: none;
  margin-bottom: 40rpx;
}

.login-btn::after {
  border: none;
}

.login-btn:active {
  opacity: 0.85;
}

/* 隐私协议 */
.agreement-row {
  display: flex;
  align-items: center;
}

.agreement-text {
  font-size: 24rpx;
  color: #999;
  margin-left: 8rpx;
}

.agreement-link {
  font-size: 24rpx;
  color: #3a85f7;
}

/* ===== 隐私政策弹窗 ===== */
.privacy-popup {
  display: flex;
  flex-direction: column;
  height: 100%;
  padding: 0 40rpx;
}

.privacy-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
  padding: 40rpx 0 24rpx;
}

.privacy-content {
  flex: 1;
  height: 0;
}

.privacy-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
}
