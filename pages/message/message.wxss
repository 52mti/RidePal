/* 容器 */
.container {
  background-color: #ededed;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-direction: column;
  flex-direction: column;
  height: 100vh;
  overflow: hidden;
}

.message-list {
  -webkit-flex: 1;
  flex: 1;
  overflow: hidden;
  padding-bottom: calc(100rpx + env(safe-area-inset-bottom));
}

.loading-text {
  color: #969799;
  font-size: 24rpx;
  padding: 20rpx;
  text-align: center;
}

/* 列表项 */
.chat-item {
  display: flex;
  padding: 12px 16px;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  align-items: center;
}

.chat-item:active {
  background-color: #f5f5f5; /* 点击态 */
}

/* 左侧头像 */
.avatar-box {
  position: relative;
  margin-right: 12px;
}

.avatar {
  width: 48px;
  height: 48px;
  border-radius: 6px; /* 微信风格圆角 */
  background-color: #ddd;
}

.badge {
  position: absolute;
  top: -6px;
  right: -6px;
  background-color: #fa5151;
  color: white;
  font-size: 10px;
  padding: 0 5px;
  border-radius: 10px;
  height: 16px;
  line-height: 16px;
}

/* 右侧内容 */
.content-box {
  flex: 1;
  overflow: hidden; /* 必须，为了让省略号生效 */
}

/* 第一行布局 */
.row-top {
  display: flex;
  justify-content: space-between;
  margin-bottom: 4px;
}

.title {
  font-size: 16px;
  color: #333;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 70%;
}

.tag-group {
  font-size: 10px;
  color: #999;
  border: 1px solid #ddd;
  padding: 0 2px;
  border-radius: 2px;
  margin-left: 4px;
}

.time {
  font-size: 12px;
  color: #b2b2b2;
}

/* 第二行内容（核心：限制两行） */
.row-bottom {
  display: flex;
  align-items: center;
  font-size: 13px;
  color: #999;
}

.tag-ad {
  font-size: 10px;
  color: #fa9d3b;
  border: 1px solid #fa9d3b;
  padding: 0 2px;
  border-radius: 2px;
  margin-right: 4px;
  flex-shrink: 0; /* 防止标签被压缩 */
}

.msg-text {
  /* 限制两行显示，多出部分省略号 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; /* 行数限制 */
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.4;
}

.icon-group {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 10rpx 16rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  padding-right: 25rpx;
}

.search-icon {
  margin-left: auto;
  display: block;
}
