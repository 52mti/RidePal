/* 容器 */
.container {
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  height: 100vh;
  overflow: hidden;
}

/* 顶部栏 */
.top-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.top-bar-left {
  display: flex;
  align-items: center;
}

.top-bar-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.top-bar-right {
  display: flex;
  align-items: center;
}

/* 消息列表 */
.message-list {
  flex: 1;
  overflow: hidden;
}

.loading-text {
  color: #969799;
  font-size: 24rpx;
  padding: 20rpx;
  text-align: center;
}

/* 列表项 */
.chat-item {
  display: flex;
  padding: 24rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  align-items: flex-start;
}

.chat-item:active {
  background-color: #f5f5f5;
}

/* 头像 */
.avatar-wrap {
  position: relative;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 16rpx;
  background-color: #ddd;
}

.avatar-dynamic {
  width: 96rpx;
  height: 96rpx;
  border-radius: 16rpx;
  background-color: #07c160;
  display: flex;
  align-items: center;
  justify-content: center;
}

.badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background-color: #fa5151;
  color: #fff;
  font-size: 20rpx;
  min-width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  padding: 0 8rpx;
  border-radius: 32rpx;
  box-sizing: border-box;
}

/* 内容区 */
.content-box {
  flex: 1;
  overflow: hidden;
  min-height: 96rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

/* 第一行 */
.row-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.title-wrap {
  display: flex;
  align-items: center;
  overflow: hidden;
  flex: 1;
  margin-right: 16rpx;
}

.title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.title-dynamic {
  color: #07c160;
  font-weight: 600;
}

.tag-role {
  font-size: 24rpx;
  color: #999;
  margin-left: 6rpx;
  flex-shrink: 0;
}

.time {
  font-size: 22rpx;
  color: #b2b2b2;
  flex-shrink: 0;
}

/* 普通消息第二行 */
.row-bottom {
  display: flex;
  align-items: center;
}

.msg-text {
  font-size: 26rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 拼车动态内容 */
.dynamic-info {
  display: flex;
  flex-direction: column;
}

.dynamic-detail {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 6rpx;
}

.dynamic-time-row {
  display: flex;
  align-items: center;
}

.dynamic-depart {
  font-size: 24rpx;
  color: #07c160;
  font-weight: 500;
  margin-left: 6rpx;
}

/* 浮动按钮 */
.fab {
  position: fixed;
  right: 40rpx;
  bottom: calc(180rpx + env(safe-area-inset-bottom));
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #07c160;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(7, 193, 96, 0.4);
}

.fab:active {
  opacity: 0.85;
}
