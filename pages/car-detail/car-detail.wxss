page {
  background-color: #F6F7F9;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
  height: 100vh;
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100%;
  padding-bottom: 160rpx; /* 为底部悬浮按钮留出安全空间 */
}

.car-list {
  padding: 24rpx;
}

/* ================= 车辆卡片样式 ================= */
.car-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.02);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.title-group {
  display: flex;
  align-items: center;
}

.car-name {
  font-size: 34rpx;
  font-weight: bold;
  color: #111111;
  margin-right: 16rpx;
}

.color-tag {
  font-size: 20rpx;
  color: #666666;
  background-color: #F4F5F7;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

/* 状态标签样式 */
.status-tag {
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
}

.status-approved {
  color: #FF8C00;
  background-color: #FFF3E8;
}

.status-pending {
  color: #E6A23C;
  background-color: #FFF8E1;
}

/* 车牌号 */
.plate-number {
  font-size: 44rpx;
  color: #333333;
  margin-bottom: 16rpx;
  letter-spacing: 2rpx; /* 增加字母间距，让车牌更有气势 */
}

/* 座位信息 */
.seat-info {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.seat-text {
  font-size: 26rpx;
  color: #666666;
  margin-left: 10rpx;
}

/* 操作区域 */
.card-actions {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  gap: 40rpx; /* 按钮之间的间距 */
}

.action-btn {
  display: flex;
  align-items: center;
  padding: 10rpx 0;
}

.btn-text {
  font-size: 26rpx;
  color: #666666;
  margin-left: 8rpx;
}

.delete-btn .btn-text {
  color: #ee0a24;
}


/* ================= 底部固定栏 ================= */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 24rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background-color: #F6F7F9;
  box-sizing: border-box;
  z-index: 100;
}

/* 覆盖 Vant Button 的默认样式 */
.add-btn {
  height: 96rpx !important;
  font-size: 34rpx !important;
  font-weight: bold !important;
  border-radius: 12rpx !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
}