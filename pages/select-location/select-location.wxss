page {
  background-color: #F8F9FA;
  height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100%;
}

/* ================= 搜索栏部分 ================= */
.search-header {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
}

.city-selector {
  display: flex;
  align-items: center;
  margin-right: 24rpx;
}
.city-selector text {
  font-size: 28rpx;
  color: #FF8C00; /* 主题橙 */
  font-weight: bold;
  margin-right: 8rpx;
}

.search-box {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #F4F5F7; /* 浅灰色搜索框 */
  border-radius: 12rpx;
  padding: 0 24rpx;
  height: 72rpx;
  box-sizing: border-box;
}

.search-input {
  flex: 1;
  margin-left: 16rpx;
  font-size: 28rpx;
  color: #333333;
  height: 100%;
}
.input-placeholder {
  color: #B3B3B3;
}

.cancel-btn {
  font-size: 30rpx;
  color: #666666;
  margin-left: 30rpx;
}

/* ================= 列表内容部分 ================= */
.scroll-content {
  flex: 1;
  padding: 30rpx;
  box-sizing: border-box;
  overflow-y: auto;
}

/* 标题行：历史记录 & 清除 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}
.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #666666;
}
.clear-btn {
  display: flex;
  align-items: center;
  color: #B3B3B3;
  font-size: 26rpx;
}
.clear-btn text {
  margin-left: 8rpx;
}

/* 列表卡片 */
.location-item {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.03); /* 极淡的阴影还原设计稿 */
}
.location-item:active {
  background-color: #fafafa;
}

/* 图标容器：浅橙色底 */
.item-icon-box {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background-color: #FFF3E8; 
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}
.item-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #111111;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.item-address {
  font-size: 24rpx;
  color: #999999;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 利用 CSS 旋转让原本向右的箭头变成设计图里的向右上角倾斜 */
.up-right-arrow {
  transform: rotate(-45deg);
  margin-left: 20rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}
.empty-text {
  font-size: 26rpx;
  color: #cccccc;
  margin-top: 20rpx;
}