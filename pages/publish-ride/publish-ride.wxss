page {
  background-color: #F6F7F9;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
  padding-bottom: 200rpx; /* 为底部按钮留出空间 */
}

.container {
  padding: 24rpx;
}

/* 基础卡片样式 */
.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.02);
}

.card-title {
  font-size: 26rpx;
  color: #999999;
  margin-bottom: 24rpx;
}

/* ================= 1. 起终点卡片 ================= */
.location-card {
  position: relative;
  padding: 10rpx 30rpx;
}

.location-row {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}
.bg-orange { background-color: #FF8C00; }

.location-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.city-text {
  font-size: 22rpx;
  color: #b3b3b3;
  margin-bottom: 8rpx;
}

.address-text {
  font-size: 34rpx;
  font-weight: 500;
  color: #333333;
}

.divider {
  width: calc(100% - 36rpx);
  height: 1rpx;
  background-color: #F0F0F0;
  margin-left: 36rpx;
}

/* 交换按钮 */
.swap-btn {
  position: absolute;
  right: 60rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 56rpx;
  height: 56rpx;
  background-color: #F7F8FA;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.05);
  z-index: 10;
}
.swap-icon {
  transform: rotate(90deg); /* 让交换图标竖向展示 */
}


/* ================= 2. 途经点卡片 ================= */
.waypoint-row {
  display: flex;
  align-items: center;
}
.mt-20 { margin-top: 40rpx; }

.icon-circle {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #fff;
  margin-right: 20rpx;
}
.icon-up { background-color: #FF8C00; }
.icon-down { background-color: #3B4A6B; } /* 深蓝色底色 */

.waypoint-info {
  flex: 1;
}

.waypoint-text {
  font-size: 30rpx;
}
.text-black { color: #333333; }
.text-gray { color: #999999; }


/* ================= 3. 出发时间卡片 ================= */
.time-row {
  display: flex;
  align-items: center;
}
.mt-30 { margin-top: 40rpx; }

.row-icon {
  margin-right: 20rpx;
}

.time-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.time-label {
  font-size: 22rpx;
  color: #b3b3b3;
  margin-bottom: 6rpx;
}

.time-value {
  font-size: 34rpx;
  font-weight: 500;
  color: #333333;
}

.frequency-info {
  flex: 1;
  display: flex;
  align-items: center;
}

.frequency-text {
  font-size: 32rpx;
  color: #333333;
  margin-right: 12rpx;
}

.tag-new {
  background-color: #FF8C00;
  color: #fff;
  font-size: 18rpx;
  padding: 2rpx 10rpx;
  border-radius: 16rpx 16rpx 16rpx 0; /* 特殊的气泡圆角 */
  font-weight: bold;
}


/* ================= 4. 座位及价格卡片 ================= */
.option-row {
  display: flex;
  align-items: center;
}

.option-item {
  flex: 1;
  display: flex;
  align-items: center;
}

.option-value {
  flex: 1;
  font-size: 32rpx;
  color: #333333;
}

.vertical-divider {
  width: 1rpx;
  height: 40rpx;
  background-color: #E5E5E5;
  margin: 0 30rpx;
}


/* ================= 5. 备注卡片 ================= */
.textarea-box {
  background-color: #F8F9FA;
  border-radius: 12rpx;
  padding: 24rpx;
}

.remark-input {
  width: 100%;
  height: 160rpx;
  font-size: 28rpx;
  color: #333333;
  line-height: 1.5;
}

.placeholder-style {
  color: #cccccc;
}


/* ================= 底部发布按钮 ================= */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #F6F7F9;
  padding: 20rpx 24rpx calc(20rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
  z-index: 100;
}

.publish-btn {
  height: 96rpx !important;
  font-size: 34rpx !important;
  font-weight: bold !important;
  border-radius: 12rpx !important;
}