page {
  background-color: #f6f7f9; /* Match nav background */
  height: 100vh;
}

.chat-page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* ===== 蓝色公告卡片 ===== */
.announcement {
  margin: 20rpx 30rpx 30rpx;
  padding: 30rpx;
  border-radius: 12rpx;
  background-color: #3b73ea; /* Match exact blue from image */
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(59, 115, 234, 0.2);
}

.announcement-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.announcement-label {
  font-size: 30rpx;
  font-weight: bold;
}

.announcement-date {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.announcement-body {
  display: flex;
  flex-direction: column;
}

.announcement-text {
  font-size: 26rpx;
  line-height: 1.8;
  color: rgba(255, 255, 255, 0.9);
}

/* ===== 消息滚动区域 ===== */
.scroll-box {
  flex: 1;
  height: 0;
  padding: 0 30rpx; /* Added padding to align with announcement card */
  box-sizing: border-box;
}

/* 时间戳 */
.time-stamp {
  text-align: center;
  margin: 30rpx 0;
}

.time-stamp-text {
  font-size: 24rpx;
  color: #999;
  background-color: #ebebeb;
  padding: 8rpx 20rpx;
  border-radius: 20rpx; /* Pill shape */
}

/* ===== 消息行 ===== */
.msg-row {
  display: flex;
  margin-bottom: 40rpx;
  align-items: flex-start;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx; /* Slightly rounded square, not circular */
  background-color: #e5e5e5;
  flex-shrink: 0;
}

/* 气泡通用样式 */
.bubble {
  max-width: 65%;
  padding: 24rpx 30rpx;
  font-size: 30rpx;
  line-height: 1.6;
  word-wrap: break-word;
  position: relative; /* For the little triangle pointer if needed later */
}

/* 对方消息 (左侧) */
.msg-other {
  justify-content: flex-start;
}

.bubble-other {
  background-color: #fff;
  color: #333;
  margin-left: 20rpx;
  border-radius: 4rpx 16rpx 16rpx 16rpx; /* Pointing left */
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
}

/* 我的消息 (右侧) */
.msg-me {
  justify-content: flex-end;
}

.bubble-me {
  background-color: var(--theme-main);
  color: #333;
  margin-right: 20rpx;
  border-radius: 16rpx 4rpx 16rpx 16rpx; /* Pointing right */
  box-shadow: var(--bubble-shadow);
}

/* ===== 底部输入栏 ===== */
.input-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background-color: #fff; /* White background */
  border-top: 1rpx solid #f0f0f0;
}

.icon-mic {
  margin-right: 20rpx;
}

.icon-action {
  margin-left: 20rpx;
}

.input-wrap {
  flex: 1;
  background-color: #f4f5f7; /* Light gray input background */
  border-radius: 8rpx;
  padding: 0 20rpx;
  height: 76rpx;
  display: flex;
  align-items: center;
}

.input-field {
  width: 100%;
  height: 76rpx;
  font-size: 30rpx;
  line-height: 76rpx;
  color: #333;
}

.input-placeholder {
  color: #b3b3b3;
  font-size: 30rpx;
}

/* ===== 语音激活时的呼吸动画 ===== */
.mic-active {
  animation: micPulse 1.5s infinite ease-in-out;
}

@keyframes micPulse {
  0% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(1.15);
    opacity: 0.6;
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}