page {
  background-color: #ededed;
  height: 100vh;
}

.chat-page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* ===== 蓝色公告卡片 ===== */
.announcement {
  margin: 0 24rpx 16rpx;
  padding: 24rpx 28rpx;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #3b82f6, #60a5fa);
  color: #fff;
}

.announcement-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.announcement-label {
  font-size: 28rpx;
  font-weight: 600;
}

.announcement-date {
  font-size: 24rpx;
  opacity: 0.85;
}

.announcement-body {
  display: flex;
  flex-direction: column;
}

.announcement-text {
  font-size: 24rpx;
  line-height: 1.6;
  opacity: 0.95;
}

/* ===== 消息滚动区域 ===== */
.scroll-box {
  flex: 1;
  height: 0;
}

/* 时间戳 */
.time-stamp {
  text-align: center;
  margin: 24rpx 0;
}

.time-stamp-text {
  font-size: 22rpx;
  color: #b2b2b2;
  background-color: #dadada;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
}

/* ===== 消息行 ===== */
.msg-row {
  display: flex;
  margin-bottom: 32rpx;
  padding: 0 24rpx;
  align-items: flex-start;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #ccc;
  flex-shrink: 0;
}

/* 气泡 */
.bubble {
  max-width: 65%;
  padding: 20rpx 24rpx;
  border-radius: 18rpx;
  font-size: 30rpx;
  line-height: 1.5;
  word-wrap: break-word;
}

/* 对方消息 */
.msg-other {
  flex-direction: row;
}

.msg-other .avatar {
  margin-right: 16rpx;
}

.bubble-other {
  background-color: #fff;
  color: #333;
  border-top-left-radius: 6rpx;
}

/* 我的消息 */
.msg-me {
  flex-direction: row-reverse;
}

.msg-me .avatar {
  margin-left: 16rpx;
}

.bubble-me {
  background-color: #95ec69;
  color: #000;
  border-top-right-radius: 6rpx;
}

/* 图片消息 */
.bubble-image {
  max-width: 300rpx;
  border-radius: 12rpx;
}

/* ===== 底部输入栏 ===== */
.input-bar {
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx;
  padding-bottom: calc(16rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  background-color: #f7f7f7;
  border-top: 1rpx solid #e0e0e0;
}

.bar-icon {
  margin: 0 10rpx;
  flex-shrink: 0;
}

.input-wrap {
  flex: 1;
  background-color: #fff;
  border-radius: 36rpx;
  margin: 0 12rpx;
  padding: 0 24rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
}

.input-field {
  width: 100%;
  height: 72rpx;
  font-size: 28rpx;
  line-height: 72rpx;
}

.input-placeholder {
  color: #bbb;
  font-size: 28rpx;
}
