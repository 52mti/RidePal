page {
  background-color: #ededed;
  height: 100vh;
}

.chat-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.scroll-box {
  flex: 1; /* 占据剩余空间 */
  height: 0; /* 必须配合 flex:1 */
}

/* 时间戳 */
.time-stamp {
  text-align: center;
  font-size: 12px;
  color: #b2b2b2;
  margin: 20rpx 0;
}

/* 消息行基础样式 */
.msg-row {
  display: flex;
  margin-bottom: 30rpx;
  padding: 0 20rpx;
  align-items: flex-start;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
  background-color: #ccc;
  flex-shrink: 0;
}

/* 气泡容器 */
.bubble-box {
  max-width: 70%;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 16px;
  line-height: 1.4;
  position: relative;
  word-wrap: break-word; /* 允许换行 */
}

/* 对方发的消息样式 */
.msg-other {
  flex-direction: row;
}

.msg-other .avatar {
  margin-right: 20rpx;
}

.msg-other .bubble-box {
  background-color: #ffffff;
  color: #333;
}

/* 我发的消息样式 */
.msg-me {
  flex-direction: row-reverse; /* 反转布局，头像在右 */
}

.msg-me .avatar {
  margin-left: 20rpx;
}

.msg-me .bubble-box {
  background-color: #95ec69; /* 微信绿 */
  color: #000;
}

/* 图片消息 */
.bubble-image {
  max-width: 200rpx;
  border-radius: 8rpx;
}

/* 底部输入区 */
.input-area {
  background-color: #f7f7f7;
  border-top: 1rpx solid #dcdcdc;
  padding: 16rpx 20rpx;
  padding-bottom: constant(safe-area-inset-bottom); /* 适配全面屏底部 */
  padding-bottom: env(safe-area-inset-bottom);
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 0;
  width: 100%;
  box-sizing: border-box;
}

.input-field {
  flex: 1;
  background-color: #fff;
  height: 72rpx;
  border-radius: 10rpx;
  padding: 0 20rpx;
  margin-right: 20rpx;
}

.send-btn {
  background-color: #07c160 !important;
  color: white !important;
  font-weight: 500;
  margin: 0 !important;
}