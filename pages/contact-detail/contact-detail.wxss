/* 全局背景 */
page {
  background-color: #f7f8fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, Roboto, 'PingFang SC', sans-serif;
}

/* 1. 头部样式 - 模拟卡片效果 */
.header-section {
  padding: 24rpx 0; 
}

.user-card {
  background-color: #ffffff;
  margin: 0 32rpx; /* 左右留白，形成卡片感 */
  padding: 40rpx 30rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.03);
}

.avatar-box {
  margin-right: 24rpx;
}

.info-box {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.main-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.name {
  font-size: 34rpx;
  font-weight: 600;
  color: #323233;
  margin-right: 12rpx;
}

.sub-row {
  font-size: 26rpx;
  color: #969799;
  margin-top: 6rpx;
  display: flex;
  align-items: center;
}

.value {
  margin-right: 10rpx;
}

/* 复制标签微调 */
.copy-tag {
  border-radius: 4rpx;
  padding: 0 8rpx;
}

/* 2. 中间内容区样式 */
.section-box {
  margin-bottom: 24rpx;
}

/* 自定义广告文字样式 */
.ad-content {
  font-size: 28rpx;
  color: #646566;
  line-height: 1.6;
  padding: 10rpx 0;
}

/* 覆盖 Vant Group Title 的默认边距，使其与头部对齐 */
.van-cell-group__title {
  padding-left: 32rpx !important;
  padding-bottom: 16rpx !important;
}

/* 3. 底部固定栏样式 */
.footer-placeholder {
  height: 180rpx; /* 留出底部空间 */
}

.footer-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #ffffff;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.btn-group {
  display: flex;
  padding: 20rpx 32rpx;
  gap: 24rpx; /* 按钮之间的间距 */
}

.action-btn {
  flex: 1; /* 让两个按钮平分宽度 */
  border-radius: 12rpx !important;
  font-weight: 500 !important;
}

.expand {
  flex: 1;
}