page {
  background-color: #F6F7F9;
}

.page-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

/* 1. 头部资料区域 */
.profile-header {
  background-color: #fff;
  padding: 40rpx 30rpx;
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx; /* 方形带一点圆角 */
  background-color: #fce8d5; /* 占位底色 */
  margin-right: 30rpx;
  flex-shrink: 0;
}

.info-box {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.name {
  font-size: 36rpx;
  font-weight: bold;
  color: #111;
  margin-bottom: 12rpx;
}

.sub-text {
  font-size: 26rpx;
  color: #888;
  margin-bottom: 6rpx;
}

/* 2. 常驻广告区域 */
.static-ad-section {
  background-color: #fff;
  padding: 30rpx;
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.static-ad-section .label {
  font-size: 28rpx;
  color: #888;
  width: 140rpx;
  flex-shrink: 0;
}

.static-ad-section .content {
  font-size: 30rpx;
  color: #333;
  line-height: 1.5;
  flex: 1;
}

/* 3. 动态更新区域 */
.dynamic-ad-section {
  background-color: #fff;
  padding: 0 30rpx;
}

.section-title {
  font-size: 26rpx;
  color: #888;
  padding: 30rpx 0 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.dynamic-item {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.dynamic-item.no-border {
  border-bottom: none;
}

.dynamic-item .time {
  font-size: 24rpx;
  color: #b2b2b2;
  margin-bottom: 12rpx;
}

.dynamic-item .text {
  font-size: 30rpx;
  color: #333;
  line-height: 1.5;
}

/* 4. 底部操作按钮 */
.action-buttons {
  margin-top: 20rpx; /* 紧贴上方内容块的间距 */
  padding: 20rpx 30rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.action-btn {
  background-color: #fff;
  border-radius: 12rpx;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

/* 点击反馈效果 */
.action-btn:active {
  background-color: #f2f2f2;
}

.btn-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #07c160; /* 微信绿 */
}