page {
  background-color: #F6F7F9;
}

.page-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding-top: 20rpx; /* 距离顶部的间隙 */
}

/* ===== 1. 用户资料卡片 ===== */
.user-card {
  background-color: #fff;
  margin: 0 32rpx 30rpx;
  padding: 40rpx 30rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx; /* 从圆形改为带圆角的方形 */
  background-color: #cce5ff; /* 占位底色 */
  margin-right: 30rpx;
  flex-shrink: 0;
}

.info-box {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.name {
  font-size: 38rpx;
  font-weight: bold;
  color: #111;
  margin-bottom: 12rpx;
}

.account {
  font-size: 26rpx;
  color: #888;
}

/* ===== 2. 菜单组统一样式 ===== */
.menu-group {
  margin-bottom: 24rpx !important;
}

/* 加大单元格的内边距，使其看起来更舒展 */
.menu-cell {
  padding: 30rpx 32rpx !important;
  align-items: center !important;
}

/* 图标容器样式 */
.cell-icon {
  margin-right: 24rpx;
  display: flex;
  align-items: center;
}

/* 覆盖 Vant cell 内部的文字样式 */
.van-cell__title {
  font-size: 30rpx !important;
  color: #333;
}

.van-cell__value {
  font-size: 26rpx !important;
  color: #999;
}

/* ===== 3. 悬浮按钮 ===== */
.fab-button {
  position: fixed;
  right: 40rpx;
  bottom: calc(140rpx + env(safe-area-inset-bottom));
  width: 80rpx;
  height: 80rpx;
  background-color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  z-index: 99;
}

/* 底部留白，防止内容被 Tabbar 挡住 */
.bottom-spacer {
  height: 180rpx;
}